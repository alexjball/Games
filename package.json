{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@types/jest": "^26.0.9",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.2.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "2.0.5",
    "ts-jest": "^26.1.4",
    "ts-loader": "^8.0.3",
    "tsdx": "^0.13.3",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^2.5.2"
  },
  "scripts": {
    "test": "jest --watch",
    "test:changed": "jest -o",
    "test:all": "jest",
    "build": "tsc -b tsconfig.build-all.json",
    "clean": "yarn workspaces run rimraf -rf ./dist tsconfig.build.tsbuildinfo",
    "start": "yarn workspace @games/main start",
    "lint": "set -x; eslint .; prettier -c .",
    "fix": "set -x; eslint --fix .; prettier . --write"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn test:changed && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --fix",
    "*.{json,md}": "prettier --write"
  }
}
